<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
<!--给imageview 固定宽高-->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:id="@+id/iv_NewsdetailListview_img"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_toRightOf="@+id/iv_NewsdetailListview_img"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:id="@+id/tv_newsdetailListview_title"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#88000000"
        android:layout_alignBottom="@id/iv_NewsdetailListview_img"
        android:layout_toRightOf="@id/iv_NewsdetailListview_img"
        android:paddingLeft="10dp"
        android:id="@+id/tv_newsdetailListview_pubtime"/>
</RelativeLayout>